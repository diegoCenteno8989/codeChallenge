@model Blog.Models.BlogItem

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="width:100%">
    <div class="col-6">
        <h2 class="text-primary">
            Manage Blog
        </h2>
    </div>
    <div class="col-4 text-right">
        <button type="button" onclick="limpiar()" class="btn btn-info form-control" data-toggle="modal" data-target="#myModal">
            New Blog
        </button>
    </div>

    <div class="p-4 border rounded bg-light col-lg-12 col-md-6">
        <table id="tblData" class="table table-bordered table-responsive-xl" style="width:95%;">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Image
                    </th>
                    @*<th>
                        Blog Type
                    </th>*@
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
        </table>
    </div>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form method="post" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h2 class="modal-title text-primary text-center">New Blog</h2>
                        <button type="button" class="close" data-dismiss="modal">
                            &times;
                        </button>
                    </div>
                    <div class="modal-body ">
                        <div style="padding-left:15%; padding-right:15%; padding-bottom:5px;">
                            <div class="row p-3 border-0">
                                <div asp-validation-summary="ModelOnly" class="text-danger">

                                </div>
                            </div>
                            <input type="hidden" id="blogId" asp-for="blogId" />
                            <div class="form-row" style="padding-top:5px;">
                                <div class="form-group col-md-6">
                                    <label>
                                        Title
                                    </label>
                                    <input asp-for="blogTitle" id="bTitle" class="form-control" placeholder="Title" />
                                    <span asp-validation-for="blogTitle" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <label>
                                    Description
                                </label>
                                @*<input asp-for="blogDescription" id="bDescription" class="form-control" placeholder="Description" />*@
                                @Html.TextAreaFor(model => model.blogDescription, new { cols = 35, @rows = 4, @class = "form-control" })
                                <span asp-validation-for="blogDescription" class="text-danger"></span>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="UploadedImage" class="control-label">
                                    </label>
                                    <input asp-for="UploadedImage" id="bUrlImage" accept="image/png,image/jpeg" />

                                    <span asp-validation-for="UploadedImage" class="text-danger"></span>
                                </div>

                            </div>

                            <div style="display:none">
                                <table id="tblData1" class="table table-bordered table-responsive-xl" style="width:95%;">
                                    <thead class="thead-dark">
                                        <tr class="table-info">
                                            <th>
                                                Title
                                            </th>
                                            <th>
                                                Description
                                            </th>
                                            <th>
                                                Image
                                            </th>
                                            <th>
                                                Blog Type
                                            </th>
                                            <th>

                                            </th>
                                            <th>

                                            </th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                            <div id="images"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-success">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Blog.js">

    </script>
}